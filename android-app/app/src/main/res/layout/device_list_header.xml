<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="21dp"
        android:id="@+id/textListNameHeader" />

    <TextView
        android:text="Address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textListAddressHeader"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_alignBaseline="@+id/textListNameHeader"
        android:layout_alignBottom="@+id/textListNameHeader"
        android:layout_toRightOf="@+id/textListNameHeader"
        android:layout_toEndOf="@+id/textListNameHeader" />

    <TextView
        android:text="Status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:id="@+id/textListStatusHeader"
        android:layout_alignBaseline="@+id/textListAddressHeader"
        android:layout_alignBottom="@+id/textListAddressHeader"
        android:layout_toRightOf="@+id/textListAddressHeader"
        android:layout_toEndOf="@+id/textListAddressHeader" />

</RelativeLayout>