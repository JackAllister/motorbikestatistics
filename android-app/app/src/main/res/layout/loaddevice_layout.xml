<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:text="Load From Device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="14dp"
        android:id="@+id/loaddevice_status" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/loaddevice_status"
        android:layout_alignLeft="@+id/loaddevice_status"
        android:layout_alignStart="@+id/loaddevice_status"
        android:id="@+id/loaddevice_triplist"
        android:headerDividersEnabled="false" />
</RelativeLayout>